# Database
DATABASE_URL="postgresql://user:password@host:5432/database"

# Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email (Postmark)
POSTMARK_SERVER_TOKEN="your-postmark-token"
EMAIL_FROM="noreply@nebiswera.com"

# R2 Storage (Cloudflare) - for images and audio
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key-id"
R2_SECRET_ACCESS_KEY="your-secret-access-key"
R2_BUCKET_NAME="nebiswera"
R2_PUBLIC_URL="https://cdn.nebiswera.com"

# Bunny.net Stream (Video Hosting & Transcoding)
# Get credentials from Bunny.net dashboard > Stream > Your Library
BUNNY_LIBRARY_ID="your-library-id"
BUNNY_LIBRARY_API_KEY="your-library-api-key"
BUNNY_CDN_HOSTNAME="vz-xxx.b-cdn.net"

# Bunny.net Storage (Files, Images, PDFs)
# Get credentials from Bunny.net dashboard > Storage > Your Zone
BUNNY_STORAGE_ZONE_NAME="your-storage-zone-name"
BUNNY_STORAGE_PASSWORD="your-storage-password"
BUNNY_STORAGE_HOSTNAME="storage.bunnycdn.com"

# Webhooks (Transactional Email)
POSTMARK_WEBHOOK_USERNAME="your-webhook-username"
POSTMARK_WEBHOOK_PASSWORD="your-webhook-password"

# Webhooks (Marketing Email - for nbswera.com broadcast stream)
# These credentials are configured in Postmark webhook settings
POSTMARK_MARKETING_WEBHOOK_USERNAME="your-marketing-webhook-username"
POSTMARK_MARKETING_WEBHOOK_PASSWORD="your-marketing-webhook-password"

# Email Unsubscribe Token
# Generate a random secret: openssl rand -hex 32
# Used to create secure, tamper-proof unsubscribe links
UNSUBSCRIBE_SECRET="your-unsubscribe-secret-here"

# Ably (Real-time Chat)
# Get your API key from: https://ably.com/dashboard
# This is your root API key with full permissions
ABLY_API_KEY="your-ably-api-key-here"

# Cron Job Secret
# Generate a random secret for securing cron endpoints
# Example: openssl rand -hex 32
CRON_SECRET="your-cron-secret-here"

# AI Services (Admin Panel)
# Claude API for text generation in admin blog editor
CLAUDE_API_KEY="your-claude-api-key"

# NanoBanana API for image generation in admin blog editor
NANO_BANANA_API_KEY="your-nano-banana-api-key"
