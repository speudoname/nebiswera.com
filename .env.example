# Database
DATABASE_URL="postgresql://user:password@host:5432/database"

# Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email (Postmark)
POSTMARK_SERVER_TOKEN="your-postmark-token"
EMAIL_FROM="noreply@nebiswera.com"

# R2 Storage (Cloudflare)
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key-id"
R2_SECRET_ACCESS_KEY="your-secret-access-key"
R2_BUCKET_NAME="nebiswera"
R2_PUBLIC_URL="https://cdn.nebiswera.com"

# Cloudflare Stream (for webinar videos)
# RECOMMENDED: Create a scoped API Token with only Stream permissions
# Go to: Cloudflare Dashboard > My Profile > API Tokens > Create Token
# Use template "Edit Cloudflare Stream" or create custom with:
#   - Account > Stream:Edit
#   - Account > Stream:Read
CLOUDFLARE_STREAM_TOKEN="your-scoped-stream-api-token"

# ALTERNATIVE (not recommended - gives full account access):
# CLOUDFLARE_API_KEY="your-cloudflare-global-api-key"
# CLOUDFLARE_EMAIL="your-cloudflare-account-email"

# Webhooks
POSTMARK_WEBHOOK_USERNAME="your-webhook-username"
POSTMARK_WEBHOOK_PASSWORD="your-webhook-password"

# Coconut Video Transcoding (for webinar video processing)
# Get your API key at: https://app.coconut.co/settings/api
COCONUT_API_KEY="your-coconut-api-key"
